extends layout

block content

    h1 Airport Flights
    
    div#kuz
      script(type="text/javascript").
          var pie = new d3pie("kuz", {
              "header": {
                  "title": {
                      "text": "retrasos",
                      "fontSize": 24,
                      "font": "open sans"
                  },
                  "subtitle": {
                      "text": "por causa",
                      "color": "#999999",
                      "fontSize": 12,
                      "font": "open sans"
                  },
                  "titleSubtitlePadding": 9
              },
              "footer": {
                  "color": "#999999",
                  "fontSize": 10,
                  "font": "open sans",
                  "location": "bottom-left"
              },
              "size": {
                  "canvasWidth": 590,
                  "pieOuterRadius": "100%"
              },
              "data": {
                  "sortOrder": "value-desc",
                  "content": [
                      {
                          "label": "taxi out",
                          "value": 20.7,
                          "color": "#786969"
                      },
                      {
                          "label": "taxi in",
                          "value": 9.2,
                          "color": "#f40042"
                      },
                      {
                          "label": "security delay",
                          "value": 0,
                          "color": "#786969"
                      },
                      {
                          "label": "NAS delay",
                          "value": 6.2,
                          "color": "#a71cbe"
                      },
                      {
                          "label": "weather delay",
                          "value": 1.3,
                          "color": "#ff0101"
                      },
                      {
                          "label": "carrier delay",
                          "value": 8.3,
                          "color": "#00f402"
                      },
                      {
                          "label": "departure delay",
                          "value": 27,
                          "color": "#ffa100"
                      },
                      {
                          "label": "arrival delay",
                          "value": 27.7,
                          "color": "#0500f4"
                      }
                  ]
              },
              "labels": {
                  "outer": {
                      "pieDistance": 32
                  },
                  "inner": {
                      "hideWhenLessThanPercentage": 3
                  },
                  "mainLabel": {
                      "fontSize": 11
                  },
                  "percentage": {
                      "color": "#ffffff",
                      "decimalPlaces": 0
                  },
                  "value": {
                      "color": "#adadad",
                      "fontSize": 11
                  },
                  "lines": {
                      "enabled": true
                  },
                  "truncation": {
                      "enabled": true
                  }
              },
              "effects": {
                  "pullOutSegmentOnClick": {
                      "effect": "linear",
                      "speed": 400,
                      "size": 8
                  }
              }
          });


